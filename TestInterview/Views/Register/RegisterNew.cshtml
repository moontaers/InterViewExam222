@model DALL.DataAcessLayer.User
@{
    ViewBag.Title = "Register";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <!-- Login Form -->
        <p>@TempData["msg"]</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "fadeIn second", @placeholder = "First Name*", @required = "required" } })
            @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "fadeIn second", @placeholder = "Last Name*", @required = "required" } })
            @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "fadeIn second", @placeholder = "User Name*", @required = "required" } })
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "fadeIn second", @placeholder = "Password*", @required = "required" ,@id="password"} })

            <div id="formFooter">
                <input type="submit" class="underlineHover" href="RegisterNew" value="Register" />
            </div>
        }
        <!-- Remind Passowrd -->


    </div>
</div>
@section scripts{
    <script>
        var pass = document.getElementById("password");

        var strength = 1;
        var arr = [/.{5,}/, /[a-z]+/, /[0-9]+/, /[A-Z]+/];
        jQuery.map(arr, function (regexp) {
            if (pass.match(regexp))
                strength++;
        });

    </script>


}


